<body>

    <%- include("./partials/header.ejs") %>
    

    <div class="hero">
        <div class="container">
            <div class="row justify-content-between">
                <div class="col-lg-5">
                    <div class="intro-excerpt">
                      <center>  <h1>Order Confirmation</h1></center>
                    </div>
                </div>
                <div class="col-lg-7">
                    <!-- ... (additional content if needed) ... -->
                </div>
            </div>
        </div>
    </div>

    <section class="order_details section_gap">
        <div class="container">
            <h3 class="title_confirmation">Thank you. Your order has been received.</h3>
            <div class="row order_d_inner">
                <div class="col-lg-4">
                    <div class="details_item">
                        <h4>Order Info</h4>
                        <ul class="list">
                            <li><a href="#"><span>Order Id</span> : <%= order.orderId %></a></li>
                            <li><a href="#"><span>Date</span> : <%= order.createdAt %></a></li>
                            <li><a href="#"><span>Total</span> : <%= order.totalPrice %></a></li>
                            <li><a href="#"><span>Payment method</span> : <%= order.paymentMethod %></a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="details_item">
                        <h4>Shipping Address</h4>
                        <ul class="list">
                            <li><a href="#"><span>House Name </span> : <%= order.shippingAddress.adname %></a></li>
                            <li><a href="#"><span>Street</span> : <%= order.shippingAddress.street %></a></li>
                            <li><a href="#"><span>City</span> : <%= order.shippingAddress.city %></a></li>
                            <li><a href="#"><span>Country</span> : <%= order.shippingAddress.country %></a></li>
                        </ul>
                    </div>
                </div>
                <div class="order_details_table">
                    <h2>Invoice</h2>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Product</th>
                                    <th scope="col">price</th>
                                    <th scope="col">Quantity</th>
                                    <th scope="col">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% order.items.forEach(item => { %>
                                <tr>
                                    <td>
                                        <p><%= item.productName %></p>
                                    </td>
                                    <td>
                                        <p><%= item.singleprice %></p>
                                    </td>
                                    <td>
                                        <p> x <%= item.quantity %></p>
                                    </td>
                                    <td>
                                        <p><%=item.price %></p>
                                    </td>
                                </tr>
                                <% }) %>
                               
                                <tr>
                                    <td>
                                        <h4>Total&nbsp&nbsp:&nbsp&nbsp<span><%= order.totalPrice %></span></h4>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <a href="/shop"><button class="btn btn-dark btn-custom-size py-3 btn-block btn-continue-shopping">Continue shopping</button></a>
                    </div>
                </div>
            </div>
        </div>
    </section>

