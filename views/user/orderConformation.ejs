        }

        .order_details {
            padding: 60px 0;
        }

        .title_confirmation {
            color: #ff0000;
            font-size: 36px;
            font-weight: 600;
            margin-bottom: 30px;
        }

        .order_d_inner {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            padding: 30px;
        }

        .details_item h4 {
            color: #8a4a4a;
            font-size: 24px;
            margin-bottom: 20px;
        }

        .details_item ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .details_item ul li {
            margin-bottom: 15px;
        }

        .order_details_table {
            margin-top: 50px;
        }

        .order_details_table h2 {
            color: #845252;
            font-size: 28px;
            font-weight: 600;
            margin-bottom: 20px;
        }

        .table th,
        .table td {
            border: none;
        }

        .table th {
            background-color: #d22727;
            color: #fff;
        }

        .table tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .table-responsive {
            overflow-x: auto;
        }

        .order_details .details_item h4,
        .order_details .details_item ul.list li a {
            color: #495057!important; /* Set to a color that contrasts with the background */
        }
    </style>
