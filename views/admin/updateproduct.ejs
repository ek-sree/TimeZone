<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>StepEra Admin</title>
    <link rel="stylesheet" href="/adminassets/vendors/mdi/css/materialdesignicons.min.css" />
    <link rel="stylesheet" href="/adminassets/vendors/flag-icon-css/css/flag-icon.min.css" />
    <link rel="stylesheet" href="/adminassets/vendors/css/vendor.bundle.base.css" />
    <link rel="stylesheet" href="/adminassets/vendors/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="/adminassets/vendors/bootstrap-datepicker/bootstrap-datepicker.min.css" />
    <link rel="stylesheet" href="/adminassets/css/style.css" />
    <link rel="shortcut icon" href="/adminassets/images/favicon.png" />
    
  </head>
  <body>
    <div class="container-scroller">
      <%- include('partials/sidebar')%>
      <div class="container-fluid page-body-wrapper">
        <div id="theme-settings" class="settings-panel">
          <i class="settings-close mdi mdi-close"></i>
          <p class="settings-heading">SIDEBAR SKINS</p>
          <div class="sidebar-bg-options selected" id="sidebar-default-theme">
            <div class="img-ss rounded-circle bg-light border mr-3"></div> Default
          </div>
          <div class="sidebar-bg-options" id="sidebar-dark-theme">
            <div class="img-ss rounded-circle bg-dark border mr-3"></div> Dark
          </div>
          <p class="settings-heading mt-2">HEADER SKINS</p>
          <div class="color-tiles mx-0 px-4">
            <div class="tiles light"></div>
            <div class="tiles dark"></div>
          </div>
        </div>
        <%- include('partials/nav')%>
        <div class="main-panel">
         
            <div class="container form-container">
                <h1 class="mb-4">Update product</h1>
  
                  <form action="/admin/updateproduct/<%= product._id %>" method="post">
                    <div class="mb-3">
                        <label for="categoryName" class="form-label">Product Name:</label>
                        <input type="text" class="form-control" id="categoryName" name="productName" value="<%= product.name %>" required>
                        <% if(expressFlash.productNameError){%>
                          <div class="alter text-danger text-start"><%= expressFlash.productNameError%></div>
                        <%}%>
                      </div>

                    <div class="mb-3">
                      <label for="categoryName" class="form-label">MRP:</label>
                      <input type="number" class="form-control" id="mrp" name="mrp" value="<%= product.mrp %>" required>
                      <% if(expressFlash.mrpError){%>
                        <div class="alter text-danger text-start"><%= expressFlash.mrpError%></div>
                      <%}%>
                  </div>


                  <div class="mb-3">
                    <label for="categoryName" class="form-label">Discount:</label>
                    <input type="number" class="form-control" id="discount" name="discount" min="0" max="99" oninput="calculatePrice()" value="<%= product.discount %>" required>
                    <% if(expressFlash.discountError){%>
                      <div class="alter text-danger text-start"><%= expressFlash.discountError%></div>
                    <%}%>
                </div>


                    <div class="mb-3">
                        <label for="categoryName" class="form-label">Price:</label>
                        <input type="number" class="form-control" id="categoryName" name="productprice" value="<%= product.price %>" required>
                        <% if(expressFlash.priceError){%>
                          <div class="alter text-danger text-start"><%= expressFlash.priceError%></div>
                        <%}%>
                    </div>
                    <div class="mb-3 d-flex">
                        <label for="categoryName" class="form-label">Product stock:</label>
                        <input type="number" class="form-control ml-2" id="categoryName" name="stock" value="<%= product.stock %>" style="height:30px; width: 200px;" required>
                        <% if(expressFlash.stockError){%>
                          <div class="alter text-danger text-start"><%= expressFlash.stockError%></div>
                        <%}%>
                      </div>
                    
        
                    <div class="mb-3">
                      <label for="description" class="form-label">Description:</label>
                      <textarea class="form-control" id="description" name="description" rows="4" required><%= product.description%></textarea>
                      <% if(expressFlash.descriptionError){%>
                        <div class="alter text-danger text-start"><%= expressFlash.descriptionError%></div>
                      <%}%>
                    </div>

                    <div class="mb-3">
                      <label for="categoryName" class="form-label">Display type:</label>
                      <input type="text" class="form-control" id="categoryName" name="displayType" value="<%= product.displaytype %>" required>
                      <% if(expressFlash.displayError){%>
                        <div class="alter text-danger text-start"><%= expressFlash.displayError%></div>
                      <%}%>
                    </div>

                  <div class="mb-3">
                    <label for="categoryName" class="form-label">Strap type:</label>
                    <input type="text" class="form-control" id="categoryName" name="strapType" value="<%= product.straptype %>" required>
                    <% if(expressFlash.strapTypeError){%>
                      <div class="alter text-danger text-start"><%= expressFlash.strapTypeError%></div>
                    <%}%>
                  </div>
                
                <div class="mb-3">
                  <label for="categoryName" class="form-label">Strap material:</</label>
                  <input type="text" class="form-control" id="categoryName" name="strapMaterial" value="<%= product.strapmaterial %>" required>
                  <% if(expressFlash.strapmaterialError){%>
                    <div class="alter text-danger text-start"><%= expressFlash.strapmaterialError%></div>
                  <%}%>
                </div>

              <div class="mb-3">
                <label for="categoryName" class="form-label">Strap color:</label>
                <input type="text" class="form-control" id="categoryName" name="strapColor" value="<%= product.strapcolor %>" required>
                <% if(expressFlash.strapColorErrorr){%>
                  <div class="alter text-danger text-start"><%= expressFlash.strapColorError%></div>
                <%}%>
              </div>

            
            <div class="mb-3">
              <label for="categoryName" class="form-label">Power source:</label>
              <input type="text" class="form-control" id="categoryName" name="powerSource" value="<%= product.powersource %>" required>
              <% if(expressFlash.powerSourceError){%>
                <div class="alter text-danger text-start"><%= expressFlash.powerSourceError%></div>
              <%}%>
            </div>

           
          <div class="mb-3">
            <label for="categoryName" class="form-label">Dial color:</label>
            <input type="text" class="form-control" id="categoryName" name="dialColor" value="<%= product.dialcolor %>" required>
            <% if(expressFlash.dialColorError){%>
              <div class="alter text-danger text-start"><%= expressFlash.dialColorError%></div>
            <%}%>
          </div>

        <div class="mb-3">
          <label for="categoryName" class="form-label">Novelty feature:</label>
          <input type="text" class="form-control" id="categoryName" name="feature" value="<%= product.feature %>" required>
          <% if(expressFlash.featureError){%>
            <div class="alter text-danger text-start"><%= expressFlash.featureError%></div>
          <%}%>
        </div>

      <div class="mb-3">
        <label for="description" class="form-label">Images:</label>
        <% if (product.images && product.images.length > 0) { %>
          <% product.images.forEach(item => { %>
            <img style="width: 100px; height: 100px;" src="/<%= item %>">
            <!-- Add any additional logic or buttons related to images here -->
          <% }) %>
        <% } else { %>
          <p>No images available</p>
        <% } %>
      </div>
      <a href="/admin/editimg/<%= product._id %>" class="btn btn-danger btn-xs">Edit Images</a>
                    <button type="submit" class="btn btn-primary">Update</button>
                  </form>
            </div>
          


         
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->

    <script>
      function calculatePrice() {
        const mrpInput = document.getElementById('mrp');
        const discountInput = document.getElementById('discount');
        const priceInput = document.getElementById('price');
    
        let mrp = parseFloat(mrpInput.value); 
        let discount = parseFloat(discountInput.value) || 0;
    
        mrp = isNaN(mrp) ? 0 : Math.max(mrp, 1);
        mrpInput.value = mrp;
    
        discount = Math.min(Math.max(discount, 0), 99);
        discountInput.value = discount;
    
        const calculatedPrice = discount >= 0 && discount <= 99 ? mrp - (mrp * discount / 100) : '';
    
        priceInput.value = isNaN(calculatedPrice) ? '' : calculatedPrice.toFixed(2);
      }
    </script>
    
    <script src="/adminassets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="/adminassets/vendors/chart.js/Chart.min.js"></script>
    <script src="/adminassets/vendors/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
    <script src="/adminassets/vendors/flot/jquery.flot.js"></script>
    <script src="/adminassets/vendors/flot/jquery.flot.resize.js"></script>
    <script src="/adminassets/vendors/flot/jquery.flot.categories.js"></script>
    <script src="/adminassets/vendors/flot/jquery.flot.fillbetween.js"></script>
    <script src="assets/vendors/flot/jquery.flot.stack.js"></script>
    <script src="/adminassets/vendors/flot/jquery.flot.pie.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="/adminassets/js/off-canvas.js"></script>
    <script src="/adminassets/js/hoverable-collapse.js"></script>
    <script src="/adminassets/js/misc.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <script src="/adminassets/js/dashboard.js"></script>
    <!-- End custom js for this page -->
  </body>
</html>